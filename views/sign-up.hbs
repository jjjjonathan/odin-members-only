<h2 class="mb-4">
  {{title}}
</h2>
<form action="" method="POST">
  <div class="mb-3">
    <label for="email" class="form-label">
      Email address
    </label>
    <input
      type="email"
      class="form-control"
      id="email"
      name="email"
      placeholder="Email address"
    />
  </div>
  <div class="mb-3">
    <label for="username" class="form-label">
      Username
    </label>
    <input
      type="text"
      class="form-control"
      id="username"
      name="username"
      placeholder="Username"
    />
  </div>
  <div class="mb-3">
    <label for="password" class="form-label">
      Password
    </label>
    <input
      type="password"
      class="form-control"
      id="password"
      name="password"
      placeholder="Password"
    />
  </div>
  <div class="mb-3">
    <label for="passwordConf" class="form-label">
      Confirm Password
    </label>
    <input
      type="password"
      class="form-control"
      id="passwordConf"
      name="passwordConf"
      placeholder="Confirm Password"
    />
  </div>
  <button type="submit" class="btn btn-primary">
    Submit
  </button>
</form>