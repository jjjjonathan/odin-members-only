<div class="container-medium">
  <h2 class="mb-4">
    {{title}}
  </h2>
  {{#if errorMessages}}
    <div class="alert alert-danger" role="alert">
      <ul class="mb-0">
        {{#each errorMessages}}
          <li>
            {{this}}
          </li>
        {{/each}}
      </ul>
    </div>
  {{/if}}
  {{#if user}}
    <form action="" method="POST">
      <div class="mb-3">
        <label for="message" class="form-label">
          Message:
        </label>
        <textarea
          class="form-control"
          id="message"
          name="text"
          minlength="1"
          maxlength="1000"
          rows="5"
        ></textarea>
      </div>
      <button type="submit" class="btn btn-primary">
        Submit
      </button>
    </form>
  {{else}}
    <div class="alert alert-danger" role="alert">
      You must be logged in to add a new message!
    </div>
  {{/if}}
</div>